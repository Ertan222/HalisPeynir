@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Gender</h4>
                <h6 class="card-subtitle"> You can add gender from here</h6>
                <form class="mt-4" asp-controller="Gender" asp-action="Add" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Add Gender</label>
                        <input type="text" name="GenderName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>



                    <div class="form-actions">
                        <div class="card-body">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Add</button>
                            <a asp-controller="Gender" asp-action="List" class="btn btn-dark">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

