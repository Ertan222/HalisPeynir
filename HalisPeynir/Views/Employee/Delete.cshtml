
@model Employee
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 col-md-12 mt-4">
    <!-- Card -->
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ID: @Model.EmployeeID </h4>
            <h4 class="card-title">NameandSecName: @Model.NameAndSecName</h4>
            <h4 class="card-title">Surname: @Model.Surname</h4>
            <p class="card-text">You sure u wants to delete this employee?</p>

            <div class="button-group">
                <form asp-controller="Employee" asp-action="RealDelete" asp-route-id="@Model.EmployeeID" method="post">
                    <button type="submit" class="btn waves-effect waves-light btn-lg btn-rounded btn-danger">Delete</button>
                    <a asp-controller="Employee" asp-action="List" asp-route-id="@Model.EmployeeID" class="btn waves-effect waves-light btn-lg btn-rounded btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <!-- Card -->
</div>


