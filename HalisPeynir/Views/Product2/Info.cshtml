@model Product

@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 mt-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">FEEDS</h5>
            <ul class="feeds">
                <li>
                    ID: @Model.ProductID
                </li>
                <li>
                    Product Name: @Model.Name
                </li>
                <li>
                    Product Price: @Model.Price
                </li>


            </ul>
            <div class="button-group">
                <a asp-controller="Product2" asp-action="Edit" asp-route-id="@Model.ProductID" class="btn waves-effect waves-light btn-lg btn-rounded btn-warning">DÜZENLE</a>
                <a asp-controller="Product2" asp-action="Delete" asp-route-id="@Model.ProductID" class="btn waves-effect waves-light btn-lg btn-rounded btn-dark">SİL</a>
                <a asp-controller="Product2" asp-action="List" class="btn waves-effect waves-light btn-lg btn-rounded btn-info">LİSTEYE DÖN</a>

            </div>
        </div>
    </div>
</div>

