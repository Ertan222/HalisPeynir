@model List<Product>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Products</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <a asp-controller="Product2" asp-action="Add" method="post" type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create New</a>
        </div>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table full-color-table full-danger-table hover-table">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Product Price</th>
                                <th>Others</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product product in Model)
                            {
                                <tr>
                                    <td>@product.ProductID</td>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>
                                        <a class="like" asp-controller="Product2" asp-action="Edit" asp-route-id="@product.ProductID" title="Edit">
                                            <i class="fas fa-edit fa-lg"></i>
                                        </a>
                                        

                                        <a class="like" asp-controller="Product2" asp-action="Info" asp-route-id="@product.ProductID" title="İnfo">
                                            <i class="fas fa-info-circle fa-lg"></i>
                                        </a>
                                        

                                        <a class="like" asp-controller="Product2" asp-action="Delete" asp-route-id="@product.ProductID" title="Delete">
                                            <i class="fas fa-trash fa-lg"></i>
                                        </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>